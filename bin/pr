#!/usr/bin/env python

import os
import click


@click.argument("project_name", required=False)
@click.option("--add", is_flag=True)
@click.command()
def cd(project_name, add):
    if not project_name:
        project_name = ""
    os.system(f". stuff-pr {project_name}")
    if add:
        print("add with python")


if __name__ == "__main__":
    cd()
